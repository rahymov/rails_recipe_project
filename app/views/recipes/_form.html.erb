<div class="row">
	<div class="col-md-6 offset-md-3">
		<div class="card">
			<div class="card-header">
				<h2 class="center">Create Recipe</h2>
			</div>

			<%= form_for @recipe do |f| %>
				<% if @recipe.errors.any? %>
				<div id="errors">
					<p><%= @recipe.errors.count %> Prevented this recipe from saving </p>
				</div>
				<% end %>
				<ul>
					<% @recipe.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				</ul>
				<% end %>
				<div class="card-body">
					<%= f.label :name %>
					<%= f.text_field :name, class: "form-control" %>
					<%= f.label :description %>
					<%= f.text_field :description, class: "form-control" %>
					<hr>
			    <div class="form-group">
			      <label class="control">Categories</label> <br>
			      <% Category.all.each do |category| %>
			        <input type="checkbox" name="categories[]" value="<%= category.id %>" id="<%= category.name %>" class="category-name-checkbox">
			          <%= category.name %>
			        </input>
			      <% end %>
			    </div>
			    <%#= f.check_box :categories, Category.all, :id, :name %>
					<%#= f.input :image, class: "form-control" %>
					<%= f.submit class: "btn btn-primary" %>
			  </div>
			<% end %>
		</div>
		<%= link_to "Back", root_path %>
	</div>
</div>
